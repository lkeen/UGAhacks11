# Anthropic API Key for Claude orchestrator
ANTHROPIC_API_KEY=your_api_key_here

# Database
DATABASE_URL=sqlite:///backend/data/disaster_relief.db

# Copernicus Open Access Hub credentials (for satellite imagery)
# Sign up at: https://scihub.copernicus.eu/dhus/#/self-registration
COPERNICUS_USER=your_username
COPERNICUS_PASSWORD=your_password

# Western NC Bounding Box (Asheville region)
BBOX_WEST=-83.5
BBOX_SOUTH=35.0
BBOX_EAST=-81.5
BBOX_NORTH=36.5

# Frontend (Next.js)
# Mapbox access token for map display - get one at https://mapbox.com
NEXT_PUBLIC_MAPBOX_TOKEN=your_mapbox_token_here
# Backend API URL (for frontend to connect to)
NEXT_PUBLIC_API_URL=http://localhost:8000
